<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Shopify Seller Plans</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>

    <script src="https://unpkg.com/feather-icons"></script>

    <style>

        .feature-check::before {

            content: "✓";

            color: #96bf48;

            font-weight: bold;

            margin-right: 8px;

        }

        .popular-badge {

            background: linear-gradient(135deg, #FFDE59 0%, #F5A623 100%);

        }

    </style>

</head>

<body class="bg-gray-50">

    <div class="container mx-auto px-4 py-12 max-w-4xl">

        <header class="text-center mb-12" data-aos="fade-down">

            <div class="flex justify-center items-center mb-4">

                <img src="https://cdn.shopify.com/assets/images/logos/shopify-bag.png" alt="Shopify Logo" class="w-12 h-12">

                <h1 class="text-3xl font-bold text-green-800 ml-3">Shopify Seller Plans</h1>

            </div>

            <h2 class="text-xl text-gray-800 mb-2">Choose Your Perfect Plan</h2>

            <p class="text-gray-600 max-w-2xl mx-auto">

                Get compliant with our seller permit solutions designed for Shopify merchants of all sizes. Select the plan that best fits your business needs.

            </p>

        </header>



        <div class="grid md:grid-cols-2 gap-6 mb-12" data-aos="fade-up">

            <!-- 3 Months Plan -->

            <div class="bg-white rounded-lg shadow-md overflow-hidden border-t-4 border-green-500">

                <div class="p-6">

                    <div class="flex justify-between items-start">

                        <h2 class="text-xl font-semibold text-gray-800">3 Months Plan</h2>

                    </div>

                    <div class="text-2xl font-bold text-green-800 mt-2">$149 <span class="text-base font-normal text-gray-600">/year</span></div>

                    <p class="text-sm text-gray-500 mt-1">Basic compliance for new sellers</p>

 

                    <ul class="mt-4 space-y-2">

                        <li class="feature-check">3 Months coverage</li>

                        <li class="feature-check">Basic compliance</li>

                        <li class="feature-check">Email support</li>

                    </ul>

 

                    <button onclick="openModal('3 Months Plan', '3months')" class="w-full mt-6 bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition duration-300">

                        Select Plan

                    </button>

                </div>

            </div>



            <!-- 6 Months Plan -->

            <div class="bg-white rounded-lg shadow-lg overflow-hidden border-t-4 border-green-500 transform scale-105 z-10">

                <div class="p-6">

                    <div class="flex justify-between items-start">

                        <h2 class="text-xl font-semibold text-gray-800">6 Months Plan</h2>

                        <span class="popular-badge text-xs font-bold text-yellow-800 px-3 py-1 rounded-full">MOST POPULAR</span>

                    </div>

                    <div class="text-2xl font-bold text-green-800 mt-2">$269 <span class="text-base font-normal text-gray-600">($90/year)</span></div>

                    <p class="text-sm text-green-600 font-medium mt-1">Save $10</p>

                    <p class="text-sm text-gray-500">Great for growing businesses</p>

 

                    <ul class="mt-4 space-y-2">

                        <li class="feature-check">6 Months coverage</li>

                        <li class="feature-check">Priority support</li>

                        <li class="feature-check">Compliance updates</li>

                    </ul>

 

                    <button onclick="openModal('6 Months Plan', '6months')" class="w-full mt-6 bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition duration-300">

                        Select Plan

                    </button>

                </div>

            </div>



            <!-- 10 Months Plan -->

            <div class="bg-white rounded-lg shadow-md overflow-hidden border-t-4 border-green-500">

                <div class="p-6">

                    <div class="flex justify-between items-start">

                        <h2 class="text-xl font-semibold text-gray-800">10 Months Plan</h2>

                    </div>

                    <div class="text-2xl font-bold text-green-800 mt-2">$399 <span class="text-base font-normal text-gray-600">($80/year)</span></div>

                    <p class="text-sm text-green-600 font-medium mt-1">Save $20</p>

                    <p class="text-sm text-gray-500">Ideal for established sellers</p>

 

                    <ul class="mt-4 space-y-2">

                        <li class="feature-check">10 Months coverage</li>

                        <li class="feature-check">24/7 support</li>

                        <li class="feature-check">Compliance monitoring</li>

                    </ul>

 

                    <button onclick="openModal('10 Months Plan', '10months')" class="w-full mt-6 bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition duration-300">

                        Select Plan

                    </button>

                </div>

            </div>



            <!-- 1 Year Plan -->

            <div class="bg-white rounded-lg shadow-md overflow-hidden border-t-4 border-green-500">

                <div class="p-6">

                    <div class="flex justify-between items-start">

                        <h2 class="text-xl font-semibold text-gray-800">1 Year Plan</h2>

                    </div>

                    <div class="text-2xl font-bold text-green-800 mt-2">$700 <span class="text-base font-normal text-gray-600">($70/year)</span></div>

                    <p class="text-sm text-green-600 font-medium mt-1">Save $30</p>

                    <p class="text-sm text-gray-500">Best for long-term sellers</p>

 

                    <ul class="mt-4 space-y-2">

                        <li class="feature-check">1 year coverage</li>

                        <li class="feature-check">Dedicated account manager</li>

                        <li class="feature-check">Full compliance package</li>

                    </ul>

 

                    <button onclick="openModal('1 Year Plan', '1year')" class="w-full mt-6 bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition duration-300">

                        Select Plan

                    </button>

                </div>

            </div>

        </div>



        <footer class="text-center text-gray-600 text-sm">

            <div class="flex justify-center space-x-6 mb-4">

                <a href="#" class="hover:text-green-600"><i data-feather="facebook"></a>

                <a href="#" class="hover:text-green-600"><i data-feather="instagram"></a>

                <a href="#" class="hover:text-green-600"><i data-feather="twitter"></a>

                <a href="#" class="hover:text-green-600"><i data-feather="linkedin"></a>

            </div>

            <p>© 2025 Shopify Seller Permit. All rights reserved.</p>

        </footer>

    </div>



    <!-- Modal -->

    <div id="modal-overlay" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">

        <div class="bg-white rounded-lg shadow-xl w-full max-w-md relative" data-aos="zoom-in">

            <button onclick="closeModal()" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700">

                <i data-feather="x">

            </button>

 

            <div class="p-6">

                <h3 class="text-xl font-semibold text-gray-800 mb-2" id="selected-plan-title"></h3>

                <p class="text-sm text-gray-600 mb-6">Please fill out the form to complete your application</p>

 

                <form id="seller-form" action="https://submit-form.com/QKFitjf4y" method="POST" class="space-y-4">

                    <input type="hidden" name="\\\_redirect" value="https://shopify-seller-permit-portal.netlify.app/thankyou.html">

                    <input type="hidden" name="plan" id="form-plan" value="">

 

                    <div>

                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>

                        <input id="email" name="email" type="email" placeholder="you@example.com" required

                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">

                    </div>

 

                    <div>

                        <label for="store" class="block text-sm font-medium text-gray-700 mb-1">Store URL</label>

                        <input id="store" name="store" type="text" placeholder="https://yourstore.myshopify.com" required

                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">

                    </div>

 

                    <div>

                        <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Location of Operation</label>

                        <select id="location" name="location" required

                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">

                            <option value="">Select your location</option>

                            <option>United States</option>

                            <option>Canada</option>

                            <option>United Kingdom</option>

                            <option>Australia</option>

                            <option>European Union</option>

                            <option>Other</option>

                        </select>

                    </div>

 

                    <div>

                        <label for="business" class="block text-sm font-medium text-gray-700 mb-1">Business Name</label>

                        <input id="business" name="business" type="text" placeholder="Your business name" required

                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">

                    </div>

 

                    <div class="flex items-center">

                        <input id="agree" name="agree" type="checkbox" required

                               class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded">

                        <label for="agree" class="ml-2 block text-sm text-gray-700">

                            I agree to the terms and conditions

                        </label>

                    </div>

 

                    <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition duration-300">

                        Submit Application

                    </button>

                </form>

            </div>

        </div>

    </div>



    <script>

        AOS.init();

        feather.replace();

 

        function openModal(planName, planId) {

            document.getElementById('modal-overlay').classList.remove('hidden');

            document.getElementById('selected-plan-title').textContent = planName;

            document.getElementById('form-plan').value = planId;

        }

 

        function closeModal() {

            document.getElementById('modal-overlay').classList.add('hidden');

        }

 

        // Close modal when clicking outside

        document.getElementById('modal-overlay').addEventListener('click', function(e) {

            if (e.target === this) {

                closeModal();

            }

        });

    </script>

</body>

</html>

